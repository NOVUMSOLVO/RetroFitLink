# Environment Variables for RetroFitLink Backend
# IMPORTANT: Never commit this file to version control in production!

# Application Settings
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/retrofitlink

# JWT Configuration - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=development_jwt_secret_please_change_in_production_use_at_least_256_bits
JWT_EXPIRES_IN=24h

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545

# Security Configuration
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=development_session_secret_change_in_production

# CORS Settings
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Keys for IoT and Internal Services
IOT_API_KEY=development_iot_api_key_change_in_production
INTERNAL_API_KEY=development_internal_api_key_change_in_production

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@retrofitlink.com

# AWS Configuration (for production)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
